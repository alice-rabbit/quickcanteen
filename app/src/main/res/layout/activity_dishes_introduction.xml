<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_dishes_introduction_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffffff">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/successToolBar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/bottom"
            android:layout_below="@+id/successToolBar">
            <!--android:layout_below="@+id/toolbar"-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_margin"
                android:layout_marginRight="@dimen/page_margin"
                android:layout_marginTop="@dimen/page_margin"
                android:layout_marginBottom="@dimen/page_margin"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/dishesImg"
                    android:contentDescription="菜品图片"
                    app:srcCompat="@drawable/nopic"/>
            <Button
                    android:text="收藏"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/collectButton"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="菜品名称"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_primary"
                        android:textColor="@color/color_text_black"
                        android:paddingTop="@dimen/text_top_margin"
                        android:id="@+id/dishesName"
                        android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="菜品介绍"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/text_top_margin"
                    android:id="@+id/dishesIntroduce"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_dishes_introduction_info"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="菜品价钱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_dishes_introduction_price"
                        android:paddingTop="@dimen/text_top_margin"
                        android:textColor="@color/color_text_red"
                        android:id="@+id/dishesPrice" android:layout_weight="1"/>
                <LinearLayout android:gravity="right"
                              android:layout_toRightOf="@id/dishesPrice"
                              android:layout_alignParentRight="true"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingTop="@dimen/text_top_margin">
                    <TextView android:clickable="true"
                              android:id="@+id/tvMinus"
                              android:gravity="center"
                              android:textStyle="bold"
                              android:background="@drawable/button_minus"
                              android:layout_width="30dp"
                              android:layout_height="30dp"/>
                    <TextView android:text="0"
                              android:id="@+id/tvCount"
                              android:minWidth="20dp"
                              android:layout_gravity="center_vertical"
                              android:textSize="@dimen/text_size_primary"
                              android:gravity="center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:clickable="true"
                              android:id="@+id/tvAdd"
                              android:textStyle="bold"
                              android:background="@drawable/button_add"
                              android:gravity="center"
                              android:layout_width="30dp"
                              android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/text_top_margin"
                    android:id="@+id/dishesRating"
                    android:numStars="5"
                    android:rating="1"
                    android:isIndicator="false"
            />
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            <TextView
                    android:text="@string/assess_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_text_black"
                    android:paddingTop="@dimen/text_top_margin"
                    android:paddingBottom="@dimen/text_bottom_margin"
                    android:id="@+id/assessListTitle"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:srcCompat="@android:color/black"
                    android:id="@+id/line"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/text_top_margin"
                    android:layout_gravity="center"
                    android:text="@string/none_assess"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_dishes_introduction_none_assess"
                    android:id="@+id/noneAssessAttention"
                    android:textAlignment="center"
            />
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/userAssessList">
            </android.support.v7.widget.RecyclerView>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
