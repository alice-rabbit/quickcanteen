<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:text="用户名称"
                android:layout_width="wrap_content"
                android:textSize="45px"
                android:layout_height="40dp" android:id="@+id/commenterName" android:layout_weight="0.05"/>
        <TextView
                android:text="TextView"
                android:layout_width="121dp"
                android:textSize="40px"
                android:layout_gravity="right"
                android:layout_height="40dp" android:id="@+id/commentTime" android:layout_weight="0.04"/>
    </LinearLayout>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showRatingBar" android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            android:isIndicator="false" style="@style/Widget.AppCompat.RatingBar.Small" android:layout_weight="0.01"/>
    <TextView
            android:text="TextView"
            android:textSize="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/commentContent"/>
</LinearLayout>